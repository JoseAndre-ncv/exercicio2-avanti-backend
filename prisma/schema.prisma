generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  email     String     @unique
  password  String
  role      Role
  createdAt DateTime   @default(now())
  admin     Admin?
  aluno     Aluno?
  professor Professor?
}

model Admin {
  id     Int  @id @default(autoincrement())
  userId Int  @unique
  user   User @relation(fields: [userId], references: [id])
}

model Professor {
  id       Int       @id @default(autoincrement())
  userId   Int       @unique
  materias Materia[]
  user     User      @relation(fields: [userId], references: [id])
}

model Materia {
  id          Int            @id @default(autoincrement())
  nome        String
  professorId Int
  frequencias Frequencia[]
  professor   Professor      @relation(fields: [professorId], references: [id])
  alunos      MateriaAluno[]
}

model Aluno {
  id          Int            @id @default(autoincrement())
  userId      Int            @unique
  user        User           @relation(fields: [userId], references: [id])
  frequencias Frequencia[]
  materias    MateriaAluno[]
}

model MateriaAluno {
  id        Int     @id @default(autoincrement())
  materiaId Int
  alunoId   Int
  aluno     Aluno   @relation(fields: [alunoId], references: [id])
  materia   Materia @relation(fields: [materiaId], references: [id])
  @@unique([materiaId,alunoId])
}

model Frequencia {
  id            Int      @id @default(autoincrement())
  materiaId     Int
  alunoId       Int
  data          DateTime
  presente      Boolean
  justificativa String?
  aluno         Aluno    @relation(fields: [alunoId], references: [id])
  materia       Materia  @relation(fields: [materiaId], references: [id])
  @@unique([alunoId,materiaId,data])
}

enum Role {
  ADMIN
  PROFESSOR
  ALUNO
}
